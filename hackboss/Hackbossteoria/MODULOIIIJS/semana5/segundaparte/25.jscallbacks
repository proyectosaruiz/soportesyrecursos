const traslateES = (nombre) => `Hola ${nombre}`;
const traslateEN = (nombre) => `Hello ${nombre}`;
const traslateGL = (nombre) => `Ola ${nombre}`;

const saludar = (nombre, funcionQueTraduce) => {
  const saludo = funcionQueTraduce(nombre);
  return saludo;
};

console.log(saludar("pepe", traslateES));
